% Room dimensions

%length [m]
length = 8;
%width [m]
width = 6;
%height [m]
height = 2.5;
% radiany na stopnie
%r2d = 180/pi;
%nachylenie dachu
%roof_pitch = 40/r2d; 

% window area
windows_num = 6;
% Height of windows = 1 m
windows_height = 1;
% Width of windows = 1 m
windows_width = 1;
window_area = windows_num * windows_height * windows_width;


% wall area 
wall_area = 2 * lenght * height + 2 * width * height - window_area;

       
% wall resistance            
% (w≈Çokno szklane do ocieplenia budynku)
% k is in units of J/sec/m/C - convert to J/hr/m/C multiplying by 3600
kWall = 0.038*3600;   % hour is the time unit
LWall = 0.2;
w = LWall/(kWall * wall_area);

% window resistance
kWindow = 0.78*3600;  % hour is the time unit
LWindow = 0.01;        
RWindow = LWindow/(kWindow*window_area);


% Heat flux density q [W/m^2]
% q = U(Ti-Te)   U - material conductivity [W/(K*m^2)])

% whole resistance 
U = 1/RWindow + 1/RWall; 

%density of air [kg/m^3]
dens_air = 1.2250;
%air mass
M = lenght * width * height * dens_air;

c = 1005.4;
Mdot = 3600;

% 1 kW-hr = 3.6e6 J
% cost = 0.27 zl / 3.6e6 J
cost = 0.27/3.6e6;


open('model');
sim('model');



